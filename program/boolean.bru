method main(void){

   a = false
   b = true
   print("Value of a is ")
   print(a)
   print("Value of b is ")
   print(b)

   print("Checking AND operation between a and b")
   if(a && b){
    print("Both are true")
   }else{
    print("Either one of them is false")
   }

   print("Checking OR operation between a and b")
   if(a || b){
    print("Either one of them is true")
   }else{
    print("Both of them is false")
   }



}
